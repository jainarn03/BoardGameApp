            <Grid Grid.Row="1" Grid.Column="0" Background="#a9a9a9"></Grid>
            <Grid Grid.Row="1" Grid.Column="1" Background="#D3D3D3"></Grid>
            <Grid Grid.Row="1" Grid.Column="2" Background="#a9a9a9"></Grid>
