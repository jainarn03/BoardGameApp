            <Grid Grid.Row="3" Grid.Column="6" Background="#a9a9a9"></Grid>

            <!--ROW 5-->
            <Grid Grid.Row="4" Grid.Column="0" Background="#D3D3D3"></Grid>
            <Grid Grid.Row="4" Grid.Column="1" Background="#a9a9a9"></Grid>
            <Grid Grid.Row="4" Grid.Column="2" Background="#D3D3D3"></Grid>
            <Grid Grid.Row="4" Grid.Column="3" Background="#a9a9a9"></Grid>
            <Grid Grid.Row="4" Grid.Column="4" Background="#D3D3D3"></Grid>
