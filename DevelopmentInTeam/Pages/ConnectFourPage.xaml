            <Grid Grid.Row="2" Grid.Column="5" Background="#a9a9a9"></Grid>
            <Grid Grid.Row="2" Grid.Column="6" Background="#D3D3D3"></Grid>

            <!--ROW 4-->
            <Grid Grid.Row="3" Grid.Column="0" Background="#a9a9a9"></Grid>
            <Grid Grid.Row="3" Grid.Column="1" Background="#D3D3D3"></Grid>
            <Grid Grid.Row="3" Grid.Column="2" Background="#a9a9a9"></Grid>
