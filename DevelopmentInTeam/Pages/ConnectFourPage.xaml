             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DevelopmentInTeam.Pages.ConnectFourPage"
             Title="Connect Four">
    
    <!--MAIN GRID-->
    <Grid BackgroundColor="#333333" RowDefinitions=".7*,5*,*" ColumnDefinitions="*,1.5*,*">

        <!--SUB GRID FOR THE BOARD-->
        <Grid Grid.Row="1" Grid.Column="1" RowDefinitions="*,*,*,*,*,*" ColumnDefinitions="*,*,*,*,*,*,*" BackgroundColor="LightGrey">

            <!--ROW 1-->
            <Grid Grid.Row="0" Grid.Column="0" Background="#D3D3D3"></Grid>
            <Grid Grid.Row="0" Grid.Column="1" Background="#a9a9a9"></Grid>
            <Grid Grid.Row="0" Grid.Column="2" Background="#D3D3D3"></Grid>
            <Grid Grid.Row="0" Grid.Column="3" Background="#a9a9a9"></Grid>
            <Grid Grid.Row="0" Grid.Column="4" Background="#D3D3D3"></Grid>
            <Grid Grid.Row="0" Grid.Column="5" Background="#a9a9a9"></Grid>
            <Grid Grid.Row="0" Grid.Column="6" Background="#D3D3D3"></Grid>

