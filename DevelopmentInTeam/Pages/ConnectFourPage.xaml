            <Grid Grid.Row="5" Grid.Column="4" Background="#a9a9a9"></Grid>
            <Grid Grid.Row="5" Grid.Column="5" Background="#D3D3D3"></Grid>
            <Grid Grid.Row="5" Grid.Column="6" Background="#a9a9a9"></Grid>

            <!--IMAGE HERE-->
            <!--<Image Source="connectfourboard.png" Aspect="Fill" Grid.RowSpan="6" Grid.ColumnSpan="7"/>-->
        </Grid>

        <Button x:Name="NewGameButton" Grid.Row="2" Grid.Column="1" Text="Start New Game" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"  Clicked="OnNewGameClicked"/>
    </Grid>
    
</ContentPage>